<Window x:Class="WpfTutorialSamples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTutorialSamples"
        xmlns:lv="clr-namespace:WpfTutorialSamples.ListView_control"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <lv:ListViewBasicSample />
        <lv:ListViewBasicSample_1 Grid.Column="1" />
        <lv:ListViewDataBindingSample Grid.Column="2" />
        <lv:ListViewItemTemplateSample Grid.Row="1" Grid.Column="0" />
        <lv:ListViewGridViewSample Grid.Row="1" Grid.Column="1" />
        
    </Grid>
</Window>
